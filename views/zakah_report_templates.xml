<odoo>
  <data>
    <!-- QWeb template -->
    <template id="zakah_summary_report_template">
      <t t-call="web.html_container">
        <t t-call="web.external_layout">
          <t t-foreach="docs" t-as="doc">
            <div class="page">
              <h2>Zakah Summary Report</h2>
              <p><strong>Inventory Value:</strong> <t t-esc="doc.inventory_value"/></p>
              <p><strong>Cash &amp; Bank:</strong> <t t-esc="doc.cash_value"/></p>
              <p><strong>Receivables:</strong> <t t-esc="doc.receivables_value"/></p>
              <p><strong>Liabilities Deducted:</strong> <t t-esc="doc.short_term_liabilities"/></p>
              <p><strong>Total Assets:</strong> <t t-esc="doc.total_assets"/></p>
              <p><strong>Zakah Due:</strong> <t t-esc="doc.zakah_due"/></p>
            </div>
          </t>
        </t>
      </t>
    </template>

    <!-- Report action -->
    <report id="zakah_summary_report"
        model="zakah.calculation"
        string="Zakah Summary"
        report_type="qweb-pdf"
        name="zakah_manager.zakah_summary_report_template"
        file="zakah_manager.zakah_summary_report_template"
        print_report_name="'Zakah_Summary_' + object.name"/>


  </data>
</odoo>
